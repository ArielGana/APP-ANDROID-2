    <TextView
        android:id="@+id/textView12"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#F8E3FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnPedido"
        android:layout_width="85dp"
        android:layout_height="61dp"
        android:layout_marginStart="311dp"
        android:backgroundTint="#F8E3FF"
        android:onClick="Irpedido"
        android:scaleType="fitCenter"
        android:src="@drawable/pedido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView12" />


    <ImageButton
        android:id="@+id/btnPan"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:backgroundTint="#F8E3FF"
        android:onClick="IrPan"
        android:scaleType="fitCenter"
        android:src="@drawable/panicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPedido"
        app:layout_constraintStart_toEndOf="@+id/btnHome" />

    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:backgroundTint="#F8E3FF"
        android:onClick="irHome"
        android:scaleType="fitCenter"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPan"
        app:layout_constraintStart_toEndOf="@+id/btnPasteles" />

    <ImageButton
        android:id="@+id/btnPasteles"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:adjustViewBounds="false"
        android:backgroundTint="#F8E3FF"
        android:hapticFeedbackEnabled="false"
        android:onClick="Pasteles"
        android:scaleType="fitCenter"
        android:src="@drawable/pasteles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnHome"
        app:layout_constraintStart_toEndOf="@+id/btnDulces" />

    <ImageButton
        android:id="@+id/btnDulces"
