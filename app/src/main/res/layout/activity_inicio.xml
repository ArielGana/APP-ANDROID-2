                    </LinearLayout>

                    <!-- Tercera imagen y TextView -->

                    <!-- Cuarta imagen y TextView -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical">

